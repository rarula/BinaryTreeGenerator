{
    "compilerOptions": {
        "lib": [
            "ES2021"
        ],
        "module": "CommonJS",
        "target": "ES2021",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitOverride": true,
        "baseUrl": ".",
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": false
    },
    "include": [
        "src/**/*.ts"
    ]
}
